<!DOCTYPE html>
<html lang="en">
  <%- include('./../partials/head.ejs', {style: 'carrito.css', title: 'Carrito' }) %>

<body>
  <%- include('./../partials/header') %>
    <main>
      <!-- ACA EMPIEZA CARRITO - JUAN-->
      <section class="carrito_page">
        <h2 class="tit_carrito">Carrito<p class="cant">(<span style="font-weight: 700; color:#3333ff">2</span>)</p>
        </h2>
        <section class="compras">
          <article class="compra1">
            <div class="foto_p">
              <img src="/img/carrito/producto1.jpg" alt="">
            </div>
            <div class="prod">
              <h5 class="tit_prod">Guitarra eléctrica G&L </h5>
              <p class="des_pr">Tribute Legacy de fresno/tilo surf green brillante con diapasón de jatoba.</p>
              <a href="#">Eliminar</a>
            </div>
            <div class="cantidad">
              <img src="/img/carrito/minus.svg" alt="">
              <p class="cuantos"></p>
              <img src="/img/carrito/plus.svg" alt="">
              <div>
                <p class="disponibles">Última disponible</p>
              </div>
            </div>
            <div class="precio_pr">
              <p class="prpr">$170.218</p>
            </div>
            <div class="border"></div>
          </article>
          <article class="compra2">
            <div class="foto_p">
              <img src="/img/carrito/producto2.jpg" alt="">
            </div>
            <div class="prod">
              <h5 class="tit_prod">Sintetizador Moog Matriarch</h5>
              <p class="des_pr">Semi-modular Paraphonic Analog Synthesizer.</p>
              <a href="#">Eliminar</a>
            </div>
            <div class="cantidad">
              <img src="/img/carrito/minus.svg" alt="">
              <p class="cuantos"></p>
              <img src="/img/carrito/plus.svg" alt="">
              <div>
                <p class="disponibles">3 disponibles</p>
              </div>
            </div>
            <div class="precio_pr">
              <p class="prpr">$584.500</p>
            </div>
            <div class="border"></div>
          </article>
        </section>
        <section class="envio_compra">
          <div class="envio_img"><img src="/img/carrito/cartelito_envio.svg" alt=""></div>
          <p class="precio_envio">$1.500</p>
        </section>
        <section class="total_compra">
          <p class="totalconenvio">Total con envío:</p>
          <p class="precio_total">$756.218</p>
        </section>
        <section class="botones_compra">
          <button id="seguircomprando" type="submit" class="btn_seguir">Seguir comprando</button>
          <button id="continuar" type="submit" class="btn_continuar">Continuar</button>
        </section>
      </section>
      <!-- ACA TERMINA CARRITO - JUAN-->
    </main>
    <%- include('./../partials/footer') %>
      <script src="https://kit.fontawesome.com/2396c6fc63.js" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
</body>

</html>