<!DOCTYPE html>
<html lang="en">
  <%- include('./../partials/head.ejs', { style: 'misProductos.css', title: 'Las ventas de '+ user.nombreCompleto}) %>
  <body>
    <%- include('./../partials/header') %>

    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const currentUrl = window.location.href; // Get the current URL
        const baseUrl = 'http://localhost:3000';
    
        // Extract the user ID from the current URL
        const userId = currentUrl.split('/').pop();
    
        const shouldRedirect = currentUrl.includes('/users/misProductos');
    
        const anchor = document.getElementById('back-link');
        if (anchor) {
          anchor.href = shouldRedirect ? `${baseUrl}/users/misProductos/${userId}` : baseUrl;
        }
      });
    </script>
    
    <a id="back-link" href="#">
      <div class="producto-volver-flecha-volver">
        <img src="/img/flecha.svg" alt="">
        <p>Volver</p>
      </div>
    </a>

    <main class="profile-grid">
      <%- include('./../partials/profileMenu') %>
      <section class="grid-misProductos">
        <% for(let i=0; i<productos.length; i++){%>
          <article>
            <div class="productogrid">
              <a href="/productos/<%=productos[i].id%>">
                <div class="img-cont">
                  <img src="http://res.cloudinary.com/dlf8flk1o/image/upload/v1692641327/productos/<%=productos[i].imagen%>" alt="foto">
                </div>
                <div class="text">
                  <% if (productos[i].estadoProducto=="Nuevo" ) { %>
                    <div class="nuevo-usado"><i class="fa-solid fa-star" style="scale:60%"></i>
                      <%=productos[i].estadoProducto%>
                    </div>
                    <%}%>
                      <h3>
                        <%=productos[i].nombreProducto%>
                      </h3>
                      <%if(productos[i].envio==0) { %>
                        <div class="envio-prod">Envio <span style="font-weight: 600;">GRATIS</span></div>
                        <%} else{ %>
                          <div class="envio-prod">Envio <span style="font-weight: 600;">
                              $ <%=productos[i].envio%>
                            </span>
                          </div>
                          <%} %>
                            <div class="precio-prod">$ <%=productos[i].precioProducto%>
                            </div>
                </div>
              </a>
            </div>
          </article>
          <% } %>
      </section>

    </main>

    <%- include('./../partials/footer') %>
    <script
      src="https://kit.fontawesome.com/2396c6fc63.js"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
