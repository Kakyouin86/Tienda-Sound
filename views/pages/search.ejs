<!DOCTYPE html>
<html lang="en">
<%- include('./../partials/head.ejs', {style: 'productos.css',title: 'Productos' }) %>

  <body>
    <%- include('./../partials/header') %>
      <a href="/">
        <div class="producto-volver-flecha-volver">
          <img src="/img/flecha.svg" alt="">
          <p>Volver</p>
        </div>
      </a>
      <main>
        <div class="main-grid main-grid-search">
          <h1>Resultados de b√∫squeda</h1>
        <% if (formControl) { %>
        <p>Buscaste: <%= formControl %></p>
         <% } %>
          <section class="grid">

            <% if (productos.length > 0) { %> 
            <% for(let i=0; i<productos.length; i++){%>
              <article>
                <div class="productogrid">
                  <a href="/productos/<%=productos[i].id%>">
                    <div class="img-cont">
                      <img src="http://res.cloudinary.com/dlf8flk1o/image/upload/v1692641327/productos/<%=productos[i].imagen%>" alt="foto">
                    </div>
                    <div class="text">
                      <% if (productos[i].estadoProducto=="Nuevo" ) { %>
                        <div class="nuevo-usado"><i class="fa-solid fa-star" style="scale:60%"></i>
                          <%=productos[i].estadoProducto%>
                        </div>
                        <%} else{%>
                          <div class="nuevo-usado"><i class="fa-solid fa-bolt" style="scale:60%"></i>
                            <%=productos[i].estadoProducto%>
                          </div>
                        <% } %> 
                          <h3>
                            <%=productos[i].nombreProducto%>
                          </h3>
                          <%if(productos[i].envio==0) { %>
                            <div class="envio-prod">Envio <span style="font-weight: 600;">GRATIS</span></div>
                            <%} else{ %>
                              <div class="envio-prod">Envio <span style="font-weight: 600;">
                                  $ <%=productos[i].envio%>
                                </span>
                              </div>
                              <%} %>
                                <div class="precio-prod">$ <%=productos[i].precioProducto%>
                                </div>
                    </div>
                  </a>
                </div>
              </article>
              <% } %>
              <% } else { %>
                <p class="noresults">No se encontraron resultados. Por favor, intenta de nuevo.</p>
              <% } %>
          </section>
        </div>
      </main>
      <%- include('./../partials/footer') %>
        <script src="https://kit.fontawesome.com/2396c6fc63.js" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
          crossorigin="anonymous"></script>
  </body>

</html>