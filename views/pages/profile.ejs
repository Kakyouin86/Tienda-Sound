<!DOCTYPE html>
<html lang="en">
  <%- include('./../partials/head.ejs', { style: 'profile.css', title: 'Perfil'}) %>

  <body>
    <%- include('./../partials/header') %>

    <a href="/">
        <div class="producto-volver-flecha-volver">
          <img src="/img/flecha.svg" alt="">
          <p>Volver</p>
        </div>
      </a>
    <main class="profile-grid">
      <%- include('./../partials/profileMenu') %>
      <section class="profile-form-container">

        <article class="grid-user-data">
          <div class="user-data">
            <img src="https://res.cloudinary.com/dlf8flk1o/image/upload/v1693694816/totalventas_m5289x.png" alt="">
            <div>
            <h4>$300.405</h4>
            <p>Total vendido</p>
          </div>
          </div>
          <div class="user-data">
            <img src="https://res.cloudinary.com/dlf8flk1o/image/upload/v1693695319/totalproductos_cdqxoz.png" alt="">
            <div>
              <h4>35</h4>
              <p>Productos</p>
            </div>
          </div>
          <div class="user-data">
            <img src="https://res.cloudinary.com/dlf8flk1o/image/upload/v1693695319/totalordenes_w7smpy.png" alt="">
            <div>
              <h4>12</h4>
              <p>Ordenes en proceso</p>
            </div>
          </div>
        </article>







        <a href="/users/editarUser/<%= user.id %>" class="btn-editar">EDITAR USUARIO</a>
        <form action="/users/borrarUser/<%= user.id %>?_method=DELETE" method="POST"
          onsubmit="return confirm('¿Está seguro/a que deseas eliminar tu usuario?');">
          <button type="submit" class="btn-eliminar">ELIMINAR CUENTA</button>
        </form>
      </section>
    </main>

    <%- include('./../partials/footer') %>
    <script
      src="https://kit.fontawesome.com/2396c6fc63.js"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
