<!DOCTYPE html>
<html lang="en">
  <%- include('./../partials/head.ejs', { style: 'profile.css', title: 'Perfil'}) %>

  <body>
    <%- include('./../partials/header') %>

    <a href="/">
        <div class="producto-volver-flecha-volver">
          <img src="/img/flecha.svg" alt="">
          <p>Volver</p>
        </div>
      </a>
    <main class="profile-grid">
      <section class="profile-menu">
        <article>
          <img src="https://res.cloudinary.com/dlf8flk1o/image/upload/v1692293497/avatars/<%= user.avatar %>" alt="" />
          <h2>Hola <span class="texto-resaltado"><%= user.nombreCompleto %>!</span></h2>
        </article>
        <nav class="profile-nav">
          <ul>
            <li><i class="fa-solid fa-user" style="color: #B7B7B7;"></i>Mi perfil</li>
            <li><i class="fa-solid fa-money-check-dollar" style="color: #b7b7b7;"></i>Mis ventas</li>
            <li><i class="fa-solid fa-bag-shopping" style="color: #b7b7b7;"></i>Mis compras</li>
          </ul>
          <ul>
            <li><i class="fa-solid fa-gear" style="color: #b7b7b7;"></i> Preferencias</li>
            <li><i class="fa-solid fa-headset" style="color: #b7b7b7;"></i> Necesito ayuda</li>
            <li><i class="fa-solid fa-right-from-bracket" style="color: #b7b7b7;"></i> Cerrar sesión</li>
            
          </ul>
        </nav>
      </section>
      <section class="profile-form-container">
        
        <h1>Editá tu información</h1>

        <form action="/register" class="base-form profile-form" method="POST" enctype="multipart/form-data">
            
            <input type="text" placeholder="Nombre Completo" name="nombreCompleto" value="<%= locals.oldData ? oldData.nombreCompleto : null  %>">
            
            <% if (locals.errors && errors.nombreCompleto) { %>
            <div class="text-danger">
              <i class="fa-solid fa-triangle-exclamation"></i> <%= errors.nombreCompleto.msg %>
            </div>
            <% } %>

            <input type="email" placeholder="Correo electrónico" name="email" value="<%= locals.oldData ? oldData.email : null  %>">

            <% if (locals.errors && errors.email) { %>
              <div class="text-danger">
              <i class="fa-solid fa-triangle-exclamation"></i> <%= errors.email.msg %>
              </div>
             <% } %>

            <input type="password" placeholder="Contraseña" name="password" value="<%= locals.oldData ? oldData.password : null  %>">

            <% if (locals.errors && errors.password) { %>
              <div class="text-danger">
              <i class="fa-solid fa-triangle-exclamation"></i> <%= errors.password.msg %>
              </div>
             <% } %>
            
            <label for="avatar" style="padding-bottom: 5px;"><i class="fa-regular fa-id-card"></i>  Imagen de tu Perfil</label>
            <input type="file" name="avatar" style="padding-top: 17px;">
           <% if (locals.errors && errors.avatar) { %>
             <div class="text-danger">
              <i class="fa-solid fa-triangle-exclamation"></i> <%= errors.avatar.msg %>
             </div>
           <% } %>

        
            <button type="submit" class="form-btn inicio-btn">Editar</button>
           
          </form>
      </section>
    </main>

